  <SemLabel Class=""@(count > 0 ? ""green"" : """")"">@count</SemLabel>") />

<h3>Disabled</h3>
<p>
  <SemLabel Enabled="@labelEnabled">Label text</SemLabel>
  <SemLabel Enabled="@labelEnabled" Color="Color.Red">Red label</SemLabel>
  <SemLabel Enabled="@labelEnabled" Color="Color.Green"><SemIcon Icon="Icon.Check" />Approved</SemLabel>
  <SemLabel Enabled="@labelEnabled" Color="Color.Green"><SemIcon Icon="Icon.Truck" Classes="@(new[] { IconClass.Fitted })" /></SemLabel>
  <SemLabel OnClick="@(() => labelEnabled = !labelEnabled)">Toggle</SemLabel>
</p>
<CodeHighlight Code=@(@"
  <SemLabel Enabled=""@labelEnabled"">Label text</SemLabel>
  <SemLabel Enabled=""@labelEnabled"" Color=""Color.Red"">Red label</SemLabel>
  <SemLabel Enabled=""@labelEnabled"" Color=""Color.Green""><SemIcon Icon=""Icon.Check"" />Approved</SemLabel>
  <SemLabel Enabled=""@labelEnabled"" Color=""Color.Green""><SemIcon Icon=""Icon.Truck"" Classes=""@(new[] { IconClass.Fitted })"" /></SemLabel>
  <SemLabel OnClick=""@(() => labelEnabled = !labelEnabled)"">Toggle</SemLabel>") />

<h3>Not visible</h3>
<p>
  <SemButton OnClick="() => labelVisibility = true" Class="small">Show label</SemButton>
  <SemButton OnClick="() => labelVisibility = false" Class="small">Hide label</SemButton>
  <br />
  <br />
  <div class="ui large primary labels">
    <SemLabel Visible="labelVisibility" Class="teal">Not visible label</SemLabel>
  </div>
</p>
