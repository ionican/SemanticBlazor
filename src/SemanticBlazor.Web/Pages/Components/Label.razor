<h1>Label</h1>

<h3>Standard</h3>
<p>
  <SemLabel>Label text</SemLabel>
  <SemLabel Color="Color.Red">Red label</SemLabel>
  <SemLabel Color="Color.Green"><SemIcon Icon="Icon.Check" />Approved</SemLabel>
  <SemLabel Color="Color.Green"><SemIcon Icon="Icon.Truck" Classes="@(new[] { IconClass.Fitted })" /></SemLabel>
</p>
<CodeHighlight Code=@(@"
  <SemLabel>Label text</SemLabel>
  <SemLabel Color=""Color.Red"">Red label</SemLabel>
  <SemLabel Color=""Color.Green""><SemIcon Icon=""Icon.Check"" />Approved</SemLabel>
  <SemLabel Color=""Color.Green""><SemIcon Icon=""Icon.Truck"" Classes=""@(new[] { IconClass.Fitted })"" /></SemLabel>") />

<h3>Clickable</h3>
<p>
  <SemLabel OnClick="(() => count++)">Click me!</SemLabel>
  <SemLabel Class="@(count > 0 ? "green" : "")">@count</SemLabel>
</p>
<CodeHighlight Code=@(@"
