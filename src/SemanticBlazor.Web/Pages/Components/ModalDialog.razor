@code {
  public string dialogClass { get; set; } = "mini";
  public string modalResult { get; set; }
  SemModal basicModal;
  SemModal standardModal;
  SemModal sizeModal;

  string[] dialogSizes = { "mini", "tiny", "small", "large", "fullscreen" };

  async Task ShowBasicModal()
  {
    await basicModal.Show();
  }
  void CancelBasicModal()
  {
    modalResult = "Modal has been canceled.";
  }
  async Task ConfirmBasicModal()
  {
    await sizeModal.Hide();
    modalResult = "Modal has been confirmed.";
  }
}
